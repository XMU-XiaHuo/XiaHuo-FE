/* pages/goodsManage/goodsManage.wxss */

.search-input-container {
  padding: 20rpx 30rpx;
  background-color: #ebeef5;
  box-sizing: border-box;
}

.search-input {
  border-radius: 20px;
}

.goods-name {
  display: inline-block;
  margin: 0 20rpx;
  font-size: 15px;
}

.i-swipeout-demo-button-group {
  height: 100%;
}

.i-swipeout-demo-button {
  position: relative;
  display: inline-block;
  width: 70px;
  height: 100%;
}

.button-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-weight: bold;
  text-align: center;
}

.info {
  background-color: #409eff;
}

.delete {
  background-color: #f56c6c;
}

.edit {
  background-color: #e6a23c;
}
