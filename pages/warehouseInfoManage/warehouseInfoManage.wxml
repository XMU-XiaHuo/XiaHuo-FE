<!--pages/warehouseInfoManage/warehouseInfoManage.wxml-->
<view class="container">
  <back-top-menu title="仓库信息管理" backUrl="../mainPage/mainPage"></back-top-menu>
  <view class="empty"></view>
  <i-panel title="仓库信息:">
    <i-input value="{{ value1 }}" title="仓库名" autofocus placeholder="请输入仓库名（2-10字）" />
    <i-input value="{{ value2 }}" title="仓库地址" placeholder="请输入仓库地址" />
    <i-input value="{{ value3 }}" title="仓库简介" type="textarea" placeholder="请输入仓库简介（不超过50字）" />
  </i-panel>
  <view class="bottom-button">
    <i-button bind:click="confirmEdit" type="primary" shape="circle">确定</i-button>
  </view>
</view>