/* pages/productList/productList.wxss */

.property-container{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  font-size: 15px;
}

.property{
  width: 50%;
  margin-top: 5rpx;
}

.property-key{
  margin-right: 20rpx;
}

.button-group-container {
  display: flex;
  flex-direction: row-reverse;
  margin-top: 30rpx;
}

.report-button {
  margin-right: 10rpx;
}

.button-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-weight: bold;
  text-align: center;
}
