/* components/goods-properties/goods-properties.wxss */
.property-tag-container {
  position: relative;
  display: inline-block;
  margin: 0 25rpx 20rpx 0;
}

.property-tag {
  display: inline-block;
  padding: 12rpx 22rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 14px;
  line-height: 1em;
  border: 1px solid black;
}

.close-icon-container {
  position: absolute;
  top: 0;
  right: 0;
  width: 35rpx;
  height: 35rpx;
  transform: translate(35%, -35%);
  background-color: white;
}

.close-icon {
  width: 100%;
  height: 100%;
}

.add {
  padding: 12rpx 18rpx;
  color: white;
  background-color: #67c23a;
  border-color: #67c23a;
  line-height: 30rpx;
}

.add-icon{
  width: 30rpx;
  height: 30rpx;
  vertical-align: top;
  margin-left: 5rpx;
}
