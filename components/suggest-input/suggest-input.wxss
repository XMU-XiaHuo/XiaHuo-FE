/* components/suggest-input/suggest-input.wxss */

.input-container {
  position: relative;
}

.suggest-container {
  position: absolute;
  left: 98px;
  right: 80rpx;
  height: 300rpx;
  z-index: 10;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
  border-radius: 4px;
  border: 1px solid #e4e7ed;
  box-sizing: border-box;
  background-color: #fff;
  overflow: scroll;
}

.suggest-item {
  padding: 0 12px;
  margin: 0;
  cursor: pointer;
  color: #606266;
  font-size: 14px;
  height: 68rpx;
  line-height: 68rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
